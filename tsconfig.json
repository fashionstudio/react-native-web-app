{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "strict": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "index.js"
  ],
  "include": [
    "./src/**/*"
  ]
}